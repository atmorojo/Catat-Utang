<!-- Form -->
<div class="col-xl-5 col-lg-5 col-md-9 col-11 text-center">
	<div class="card">
		<h3 class="text-center mb-4">Catatan Belanja Toko Kita</h3>
		<form class="form-card" action="/transaction/" method="post">
		
			<div class="row justify-content-between text-left">
				<div class="form-group col-12 flex-column d-flex"> 
					<label class="form-control-label px-3">
						Supplier<span class="text-danger"> *</span>
					</label> 
					<input type="text" id="supplier" name="nama_supplier" placeholder="" 
				onblur="validate(6)"> </div>
				<input id="supplier_id" type="hidden" name="id_supplier" value="">
			</div>
			
			<div class="row justify-content-between text-left">
				<div class="form-group col-sm-6 flex-column d-flex">
					<label class="form-control-label px-3">
						Tanggal Belanja<span class="text-danger"> *</span>
					</label>
					<input class="tgl" id="tgl_belanja" name="tgl_belanja"
					onblur="validate(1)">
				</div>
				<div class="form-group col-sm-6 flex-column d-flex">
					<label class="form-control-label px-3">
						Jatuh Tempo<span class="text-danger"> *</span>
					</label> 
					<input class="tgl" id="tgl_tempo" name="tgl_tempo" onblur="validate(2)"> 
				</div>
			</div>
			
			<div class="row justify-content-between text-left">
				<div class="form-group col-sm-12 flex-column d-flex">
					<label class="form-control-label px-3">
						Nominal<span class="text-danger"> *</span>
					</label>
					<input type="text" id="nominal" name="nominal" placeholder="" 
				onblur="validate(5)"> </div>
			</div>
			
			<div class="row justify-content-end">
				<div class="form-group col-sm-6">
					<button type="submit" class="btn-block btn-primary">Simpan</button>
				</div>
			</div>
		</form>
	</div>
</div>